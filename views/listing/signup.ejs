<% layout('boilerplate') %>

<% block('styles') 
{%>
    <link rel="stylesheet" href="/css/signup.css">
<%}%>

<main class="signup-container">
    <div class="signup-card">
        <h1>Create Your Account</h1>
        <p class="subtitle">Join our community and start booking your next stay</p>

<form method="post" action="/user/signup" id="signupForm" class="needs-validation" novalidate>
    <div class="form-group">
        <input type="email" name="email" id="email" placeholder="Email Address" required>
        <div id="emailFeedback" class="invalid-feedback">
            *required
        </div>
    </div>

    <div class="form-group">
        <input type="password" name="password" id="password" placeholder="Password" required minlength="6">
        <div id="passwordFeedback" class="invalid-feedback">
            *required
        </div>
    </div>

    <button type="submit" class="submit-btn">Create Account</button>
</form>


        <p class="login-link">Already have an account? <a href="/login">Log in</a></p>
    </div>
</main>

<script src="/js/signup.js"></script>
